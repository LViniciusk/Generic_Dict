{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run",
      "type": "shell",
      "command": "g++",
      "args": [
        "-o",
        "${workspaceFolder}/output/${fileBasenameNoExtension}.exe",
        "${file}",
        "-I",
        "${env:ICU_INCLUDE}",
        "-L",
        "${env:ICU_LIB}",
        "-licuin",
        "-licuuc",
        "-licudt"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiling C++ with ICU support"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "./output/${fileBasenameNoExtension}.exe",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "run",
      "problemMatcher": []
    }
  ]
}